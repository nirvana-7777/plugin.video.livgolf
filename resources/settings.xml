<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Credentials">
        <setting label="Username" type="text" id="username" default="" visible="true"/>
        <setting label="Password" type="text" id="password" default="" visible="true"/>
    </category>
    <category label="Viewlift API">
        <setting label="site" type="text" id="site" default="liv-golf" visible="false"/>
        <setting label="device_type" type="text" id="device_type" default="web_browser" visible="false"/>
    </category>
    <category label="Token Information">
        <setting label="token" type="text" id="token" default="" visible="false"/>
        <setting label="Issue date:" type="date" id="issue_date" default="" visible="true"/>
        <setting label="Issue time:" type="time" id="issue_time" default="" visible="true"/>
        <setting label="Expire epoch:" type="number" id="expire_epoch" default="0" visible="false"/>
        <setting label="Expire date:" type="date" id="expire_date" default="" visible="true"/>
        <setting label="Expire time:" type="time" id="expire_time" default="" visible="true"/>
        <setting label="IP Address:" type="ipaddress" id="ip" default="" visible="true"/>
        <setting label="Country code:" type="text" id="country_code" default="" visible="true"/>
        <setting label="Postal code:" type="text" id="postal_code" default="" visible="true"/>
        <setting label="Anonymous ID:" type="text" id="anonymous_id" default="" visible="true"/>
        <setting label="User ID:" type="text" id="user_id" default="" visible="true"/>
        <setting label="Device ID:" type="text" id="device_id" default="" visible="true"/>
        <setting label="Username:" type="text" id="token_user" default="" visible="true"/>
    </category>
    <category label="Renew Token">
        <setting label="Renew Token" type="action" id="renew" action="RunPlugin(plugin://plugin.video.livgolf/?action=renew)"/>
    </category>
</settings>
